int height;

void display(String item) {
System.out.println( item +" Width"+width+"height"+height);
}
public static void main(String[] args){

Chair neelkamat = new Chair();
neelkamal. foo();
}
}
class Chair extends Furniture{

void foo() 
{width=l0; height=20; display("chair"); }
}
class Table extends Furniture{
void foo() {width=30; width=30; height=50; diplay("table"); }
}
class Almira extends Furniture(
void foo(){width=40; height=70; display("almirah"); }
}

